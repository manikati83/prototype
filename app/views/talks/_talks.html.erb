<ul class="list-unstyled">
  <% talks.each do |talk| %>
    <li class="media mb-5 row">
      <% if talk.user_id == current_user.id %>
        <div class="col-md-6"></div>
        <% if talk.status == 3 %>
          <div class="media-body bg-info p-2 rounded">
            <p class="mt-3 text-light"><%= talk.content %></p>
            <div class="text-right">
              <span class="text-dark"><%= talk.created_at %></span>
            </div>
          </div>
        <% else %>
          <div class="media-body bg-primary p-2 rounded">
            <p class="mt-3 text-light"><%= talk.content %></p>
            <div class="text-right">
              <span class="text-dark"><%= talk.created_at %></span>
            </div>
          </div>
        <% end %>
        <div class="ml-5 mr-3">
          <img class="rounded img-fluid card-img-top mt-3" src="<%= gravatar_url(talk.user, { size: 50 }) %>" alt="">
          <p class="card-text text-center"><%= link_to talk.user.name, user_path(talk.user) %></p>
        </div>
        
      <% else %>
        <div class="mr-5 ml-3">
          <img class="rounded img-fluid card-img-top mt-3" src="<%= gravatar_url(talk.user, { size: 50 }) %>" alt="">
          <p class="card-text text-center"><%= link_to talk.user.name, user_path(talk.user) %></p>
        </div>
        <% if talk.status == 3 %>
          <div class="media-body bg-info p-2 rounded">
            <p class="mt-3 text-light"><%= talk.content %></p>
            <span class="text-dark"><%= talk.created_at %></span>
          </div>
        <% else %>
           <div class="media-body bg-primary p-2 rounded">
            <p class="mt-3 text-light"><%= talk.content %></p>
            <span class="text-dark"><%= talk.created_at %></span>
          </div>
        <% end %>
        <div class="col-md-6"></div>
      <% end %>
    </li>
  <% end %>
  <%= paginate talks %>
</ul>

