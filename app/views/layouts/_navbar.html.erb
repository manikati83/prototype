            <ul class="dropdown-menu dropdown-menu-dark">
              <li class="dropdown-item"><i class="fas fa-user mr-3"></i><%= link_to 'My profile', user_path(current_user) %></li>
              <li class="dropdown-divider"></li>
              <li class="dropdown-item"><i class="fas fa-sign-out-alt mr-3"></i><%= link_to 'Logout', logout_path, method: :delete %></li>
            </ul>
          </li>
          <% else %>
            <li class="navbar-item"><%= link_to 'Signup', signup_path, class: 'nav-link' %></li>
            <li class="navbar-item"><%= link_to 'Login', login_path, class: 'nav-link' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
