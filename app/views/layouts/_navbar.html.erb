<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow">
    <div class="container">
    <a class="navbar-brand bg-danger p-2" href="/">Prototype</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
        
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <% if logged_in? %>
            <li class="navbar-item mt-4 mr-5"><%= link_to '仕事一覧', root_path, class: 'nav-link border-left' %></li>
            <li class="navbar-item mt-4 mr-5"><%= link_to '仕事依頼', requests_path, class: 'nav-link border-left' %></li>
            <li class="navbar-item mt-4 mr-5"><%= link_to '仕事管理', works_path, class: 'nav-link border-left' %></li>
            <li class="nav-item dropdown">
