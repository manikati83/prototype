<% if current_user.id == @user.id %>
  <h1>プロフィール編集</h1>
  
  <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <%= f.label 'ユーザー名' %>
    <%= f.text_field :name %>
    <%= f.label '自己紹介' %>
    <%= f.text_area :content %>
    
    <%= f.submit '保存する' %>
  <% end %>
<% end %>