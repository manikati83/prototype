<% if logged_in? %>
  <div class="container">
    <div class="row">
      <aside class="col-md-2">
        <div class="card">
          <div class="card-body">
            <img class="rounded img-fluid card-img-top mt-3" src="<%= gravatar_url(current_user, { size: 50 }) %>" alt="">
            <p class="card-text text-center"><%= link_to current_user.name, user_path(current_user.id) %></p>
          </div>
        </div>
      </aside>
      <div class="col-md-10">
        <h1 class="text-center bg-dark text-white mb-5 p-3 rounded">仕事一覧</h1>
        <%= render 'requests/requests', requests: @requests %>
      </div>
    </div>
  </div>
  <% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Microposts</h1>
      <%= link_to 'sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>