<h1>作業確認</h1>
<h2><%= @talk.first.content %></h2>

<%= link_to '修正依頼をする', work_path(@work), class: 'btn btn-primary' %>

<div class="rating-box mt-3">
  <%= form_with(model: @worker_evaluation, local:true) do |f| %>
    <!--<div class="main-rating">-->
    <!--  <div class="ratings mb-3">-->
    <!--    <span class="fa fa-star-o" id="star"></span>-->
    <!--    <span class="fa fa-star-o" id="star"></span>-->
