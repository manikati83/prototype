    <!--  </div>-->
    <!--  <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>-->
    <!--</div>-->
    
    <div class="form-group" id="star">
      <%= f.label :evaluation, "評価" %>
      <%= f.hidden_field :evaluation, id: :review_star %>
      
    </div>
    
    <%= f.hidden_field :work_id, value: @work.id %>
    <%= f.text_field :content, class: "form-control", rows: 5 %>
    <%= f.submit "評価して完了", class: "btn btn-primary mt-3" %>
  <% end %>
</div>

<script>
  
   $('#star').raty({
   size: 36,
   starOff: "<%= asset_path('star-off.png') %>",
   starOn: "<%= asset_path('star-on.png') %>",
   starHalf: "<%= asset_path('star-half.png') %>",
   scoreName: 'worker_evaluation[evaluation]', //# reviewカラムに保存するので忘れないように
   half: true, //# ★の半分の入力を行う
 });
  
</script>


